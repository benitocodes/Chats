<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/chats">

    <fragment
        android:id="@+id/chats"
        android:name="com.thuraaung.chats.frag.ChatListFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chat_list" >

        <action
            android:id="@+id/action_chats_to_users"
            app:destination="@id/users" />

    </fragment>

    <fragment
        android:id="@+id/users"
        android:name="com.thuraaung.chats.frag.UserListFragment"
        android:label="Users"
        tools:layout="@layout/fragment_user_list" >

        <action
            android:id="@+id/action_users_to_chats"
            app:destination="@id/chats" />

    </fragment>

</navigation>